@inject IHttpContextAccessor Accessor;
@{
    var userid_session = @Accessor.HttpContext.Session.GetString("userid");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/VolunteeringTimeSheet.css">
</head>
<body>
    <partial name="header" model="Model" />
    <div class="container my-3">
        <p class="display-6">Volunteering Timesheet</p>
        <div class="row  gap-2 mx-2">
            <div class="col  border p-4 mt-2">
                <div class="d-flex justify-content-between">
                    <span class="align-self-center">Volunteering Hours</span>
                    <button class="apply btn rounded-pill" data-bs-toggle="modal" data-bs-target="#staticBackdrop1"> + Add</button>
                    <!-- Modal -->
                    <div class="modal fade" id="staticBackdrop1" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Please input below volunteering hours</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="d-flex flex-column">
                                        <label for="missionTime">Mission</label>
                                        <select id="missionTime">
                                            <option>Select Mission</option>
                                        </select>
                                    </div>
                                    <div class="d-flex flex-column mt-2">
                                        <label for="dateTime">Date Volunteered</label>
                                        <input type="date" id="dateTime" placeholder="select date" />
                                    </div>
                                    <div class="d-flex mt-2 justify-content-between">
                                        <div class="d-flex flex-column">
                                            <label for="hour">Hours</label>
                                            <input type="number" id="hour" />
                                        </div>
                                        <div class="d-flex flex-column mt-2">
                                            <label for="minute">Minutes</label>
                                            <input type="number" id="minute" />
                                        </div>
                                    </div>
                                    <div class="d-flex flex-column">
                                        <label for="messageTime">Message</label>
                                        <textarea id="messageTime" placeholder="Enter your message"></textarea>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-secondary rounded-pill" data-bs-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn  apply rounded-pill" data-bs-dismiss="modal" onclick="addTimesheet('time',@userid_session);">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="w-100 mt-2">
                    <thead>
                        <tr>
                            <th>Mission</th>
                            <th>Date</th>
                            <th>Hour</th>
                            <th>Minute</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Environment Conservation</td>
                            <td>22/02/2022</td>
                            <td class="ps-2">1h</td>
                            <td class="ps-2">30min</td>
                            <td><i class="bi bi-pencil-square icon"></i></td>
                            <td><i class="bi bi-trash3"></i></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col  border p-4 mt-2">
                <div class="d-flex justify-content-between">
                    <span class="align-self-center">Volunteering Goals</span>
                    <button class="apply btn rounded-pill" data-bs-toggle="modal" data-bs-target="#staticBackdrop2"> + Add</button>
                    <!-- Modal -->
                    <div class="modal fade" id="staticBackdrop2" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Please input below volunteering goal</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="d-flex flex-column">
                                        <label for="missionGoal">Mission</label>
                                        <select id="missionGoal">
                                            <option>Select Mission</option>
                                        </select>
                                    </div>
                                    <div class="d-flex flex-column mt-2">
                                        <label for="action">Actions</label>
                                        <input type="text" id="action" />
                                    </div>
                                    <div class="d-flex flex-column mt-2">
                                        <label for="dateGoal">Date Volunteered</label>
                                        <input type="date" id="dateGoal" placeholder="select date" />
                                    </div>
                                    <div class="d-flex flex-column">
                                        <label for="messageGoal">Message</label>
                                        <textarea id="messageGoal" placeholder="Enter your message"></textarea>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-secondary rounded-pill" data-bs-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn  apply rounded-pill" data-bs-dismiss="modal" onclick="addTimesheet('goal',@userid_session);">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="w-100 mt-2">
                    <thead>
                        <tr>
                            <th>Mission</th>
                            <th>Date</th>
                            <th>Action</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Plantation Programme</td>
                            <td>22/02/2022</td>
                            <td>0</td>
                            <td><i class="bi bi-pencil-square icon"></i></td>
                            <td><i class="bi bi-trash3"></i></td>
                        </tr>
                        <tr>
                            <td>Education Programme</td>
                            <td>22/02/2022</td>
                            <td>1</td>
                            <td><i class="bi bi-pencil-square icon"></i></td>
                            <td><i class="bi bi-trash3"></i></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="~/js/volunteertimesheet.js"></script>
</body>
</html>
