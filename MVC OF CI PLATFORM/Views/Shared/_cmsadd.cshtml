@model CI_PLATFORM.Entities.ViewModels.CmsAddViewModel
@{
    Layout = "~/Views/Admin/UserpageInAdmin.cshtml";
}
<head>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

</head>

<body>
    <div class="container mt-2 overflow-tableEntry">
        <div class="col-12 bg-light border p-2">
            @if (Model == null)
            {
                <span>Add</span>
            }
            else
            {
                <span>Edit</span>
            }
        </div>
        <div class="border container">
            <form method="post" asp-action="AddCms" asp-controller="Admin">
                <div class="col-12 d-flex flex-column my-2">
                    <label for="title">CMS Title</label>
                    <input type="text" id="title" class="form-control" asp-for="Title">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <input asp-for="CmsPageId" type="text" hidden />
                <div class="col-12 d-flex flex-column my-2">
                    <label asp-for="Description">CMS Description</label>
                    <textarea cols="30" rows="5" asp-for="Description" class="form-control"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="col-12 d-flex flex-column my-2">
                    <label asp-for="Slug">Slug</label>
                    <input type="text" id="slug" class="form-control" asp-for="Slug">
                    <span class="text-danger" asp-validation-for="Slug"></span>
                </div>
                <div class="col-4 d-flex flex-column my-2">
                    <label for="status">Status</label>
                    <select class="form-select dropdown-toggle" id="status" asp-for="Status">
                        <option value="1" selected>Active</option>
                        <option value="0">In-Active</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Status"></span>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-secondary rounded-pill">Cancel</button>
                    <button type="submit" class="btn btn-outline-warning  rounded-pill">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

</body>
<partial name="_ValidationScriptsPartial" />
