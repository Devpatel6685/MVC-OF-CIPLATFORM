@model CI_PLATFORM.Entities.ViewModels.SkillAddViewModel
@{
    Layout = "~/Views/Admin/UserpageInAdmin.cshtml";
}
<head>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

</head>

<body>
    <div class="container mt-2 overflow-tableEntry">
        <div class="col-12 bg-light border p-2">
            Add
        </div>
        <div class="border">
            <form method="post" asp-action="AddSkill" asp-controller="Admin">
                <div class="col-12 d-flex flex-column my-2 px-3">
                    <label for="title">Skill Title</label>
                    <input type="text" id="title" class="form-control" asp-for="SkillName">
                    <span class="text-danger" asp-validation-for="SkillName"></span>
                </div>
                <input asp-for="SkillId" type="text" hidden />
                <div class="col-4 d-flex flex-column my-2 px-3">
                    <label for="status">Status</label>
                    <select class="form-select dropdown-toggle" id="status" asp-for="Status">
                        <option value="1" selected>Active</option>
                        <option value="0">In-Active</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Status"></span>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-secondary rounded-pill">
                        <a asp-action="Skill" asp-controller="Admin" asp-route-SearchInputdata="" asp-route-pageindex=1 asp-route-pageSize=2 class="text-decoration-none text-white">Cancel</a>
                    </button>
                    <button type="submit" class="btn btn-outline-warning  rounded-pill">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

</body>
<partial name="_ValidationScriptsPartial" />

