@model CI_PLATFORM.Entities.ViewModels.Contactusmodel

<div class="modal fade" id="staticBackdrop3" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Contact Us</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="contact-form">
                <div class="modal-body d-flex flex-column">
                    <div class="my-2">
                        <label for="name">Name</label>
                        <input type="text" id="name" class="w-100 form-control" value="@Model.FirstName" disabled />
                        <span class="text-danger"></span>
                    </div>
                    <div class="my-2">
                        <label for="email">email Address</label>
                        <input type="text" id="email" class="w-100 form-control" value="@Model.Email" disabled />
                        <span class="text-danger"></span>
                    </div>
                    <div class="my-2">
                        <label for="name">Subject</label>
                        <input type="text" id="subject" class="w-100 form-control" asp-for="Subject" />
                        <span class="text-danger" asp-validation-for="Subject"></span>
                    </div>
                    <div class="my-2">
                        <label for="message">Message</label>
                        <input type="text" id="message" class="w-100 form-control" asp-for="Message" />
                        <span class="text-danger" asp-validation-for="Message"></span>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn rounded-pill border" onclick="contactsave()">Save</button>


                </div>
            </form>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial"></partial>