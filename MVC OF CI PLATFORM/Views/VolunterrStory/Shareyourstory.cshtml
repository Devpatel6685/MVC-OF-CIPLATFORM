    <partial name="header" model="Model" />
    <div class="shareyourstory">
       
        <!--First Row Of Navbar is end-->
        <!--Second row is all about static text start-->
        <h1 style="font-weight:200" class="ps-3 mt-4">Share your story</h1>
        <!--Second row is all about static text end-->
        <!--Formsectioni start-->

        <div class="row mx-2 mt-3">
            <div class="col-md-4 mt-1">
                <label for="inputEmail4">Select Mission</label>
                <select id="mission" class="form-control mt-1 ">
                    @foreach (var m in Model.Missions)
                    {
                        <option value="@m.Title" id="@m.MissionId">@m.Title</option>
                    }

                </select>
            </div>
            <div class="col-md-4 mt-1">
                <label for="inputEmail4">My Story Title</label>
                <input type="text" id="title" class="form-control mt-1" placeholder="Story Title">
            </div>
            <div class="col-md-4 mt-1">
                <label for="inputEmail4">Date</label>
                <input type="date" id="date" class="form-control mt-1" placeholder="date">
            </div>
        </div>
        <div class="row mx-2 mt-3">
            <div class="col-12 my-3">
                <label for="inputEmail4">Date</label>
                <textarea id="storytext" placeholder="I loved this mission because..."></textarea>
            </div>
        </div>
        <div class="row mx-2 mt-1">
            <div class="col-12">
                <label for="inputEmail4 ">Enter Video URL</label>
                <input class="form-control mt-1" id="videoURL" type="text" placeholder="Enter video url">
            </div>
        </div>
        <div class="row mx-2 mt-1">
            <div class="col-12">
                <div id="drop-zone" class="w-100">
                    <i class="bi bi-plus-lg" style="font-size: 50px;"></i>
                    <span class="drop-text">Drag and drop images here or click to select</span>
                    <input type="file" id="file-input" multiple accept="image/*,video/*" style="display: none;">
                </div>

                <div id="image-preview"></div>
            </div>
        </div>
        <div class="row mx-2 mt-2">
            <div class="col-12 d-flex justify-content-between">
                <div>
                    <button type="button" class="btn btn-outline-warning" style="border-radius: 50px;">Cancel</button>
                </div>
                <div>
                    <button class="btn btn-outline-warning me-2" onclick="saveDraft();" style="border-radius: 50px;">Save</button>
                    <button class="btn btn-outline-warning" style="border-radius: 50px;">Submit</button>
                </div>
            </div>
        </div>



        <!--Formsectioni end-->
        <!--footer satrt-->
